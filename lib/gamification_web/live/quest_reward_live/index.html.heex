<.header>
  Listing Quest rewards
  <:actions>
    <.link patch={~p"/quest_rewards/new"}>
      <.button>New Quest reward</.button>
    </.link>
  </:actions>
</.header>

<.table
  id="quest_rewards"
  rows={@streams.quest_rewards}
  row_click={fn {_id, quest_reward} -> JS.navigate(~p"/quest_rewards/#{quest_reward}") end}
>
  <:action :let={{_id, quest_reward}}>
    <div class="sr-only">
      <.link navigate={~p"/quest_rewards/#{quest_reward}"}>Show</.link>
    </div>
    <.link patch={~p"/quest_rewards/#{quest_reward}/edit"}>Edit</.link>
  </:action>
  <:action :let={{id, quest_reward}}>
    <.link
      phx-click={JS.push("delete", value: %{id: quest_reward.id}) |> hide("##{id}")}
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>

<.modal :if={@live_action in [:new, :edit]} id="quest_reward-modal" show on_cancel={JS.patch(~p"/quest_rewards")}>
  <.live_component
    module={GamificationWeb.QuestRewardLive.FormComponent}
    id={@quest_reward.id || :new}
    title={@page_title}
    action={@live_action}
    quest_reward={@quest_reward}
    patch={~p"/quest_rewards"}
  />
</.modal>
